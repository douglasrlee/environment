{
  "title": "Windows Bindings",
  "rules": [
    {
      "description": "Swap caps lock key to control key in iTerm 2",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.googlecode.iterm2"
              ]
            }
          ]
        }
      ]
    }
  ]
}
